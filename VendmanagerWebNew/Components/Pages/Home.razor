@page "/"
@inject IJSRuntime JSRuntime

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<input @bind="text" />
<button @onclick="ClearText">Clear</button>
<p>@text</p>

@code {
    private string text = ""; // Ensure text is private and initialized correctly

    private void ClearText()
    {
        text = string.Empty;
        Console.WriteLine("Text cleared"); // Optional: Log message for debugging
    }
}
